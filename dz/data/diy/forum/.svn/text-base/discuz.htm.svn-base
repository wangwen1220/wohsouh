<style>
.blocktitle {
	background: url("../../static/image/common/thead.png") repeat-x scroll 0 0 transparent;
    border-bottom: 1px solid #CCCCCC;
    height: 31px;
    line-height: 31px;
    padding: 0 10px;
}
.titletext {
	font-size: 14px;
    font-weight: 700;
    color: #666666 !important;
}
.titlecontent {
	margin: 0 !important;
	padding: 9px 10px;
}
.titlecontent ol {
	background: url("../../static/image/common/sortnum.png") no-repeat scroll 0 3px transparent;
    line-height: 21px;
}
.titlecontent li {
	background: none repeat scroll 0 0 transparent;
    height: 21px;
    padding-left: 20px;
    overflow: hidden;
    margin: 2px 0;
}
.titlecontent em {
	color: #999999;
	float: right;
    padding-left: 5px;
    font-style: normal;
}
</style>
<!--去除DZ系统DIV，自己写的DIV-->
<div style="width:960px; height:236px; margin-bottom: 10px; border: 0 none !important;">
	<div style="float:left; width:315px; height:236px; border: 1px solid #CCCCCC !important; margin: 0 3px 0 0 !important;">
		<div class="module cl slidebox">
			<ul class="slideshow"><!--{loop $pic $k $v}--><li style="width:313px; height:234px; display: none;">
					<a target="_blank" href="{$v['url']}">
					<img src="{$v['imgurl']}" width="313" height="234" /></a>
					<span class="title">{$v['subject']}</span>
				</li><!--{/loop}--></ul>
		</div>
		<script type="text/javascript">
			runslideshow();
		</script>
	</div>
	<div style="float:left; width:315px; height:236px; border: 1px solid #CCCCCC !important; margin: 0 3px 0 0 !important;">
		<div class="blocktitle"><span class="titletext">最新热贴</span></div>
		<div class="titlecontent">
			<ol>
				<!--{loop $latestretie $k $v}--> 
				<li><em>{$v['heats']}</em><a target="_blank" href="{$v['url']}">{$v['subject']}</a></li>
				<!--{/loop}-->
			</ol>
		</div>
	</div>
	<div style="float:right; width:315px; height:236px; border: 1px solid #CCCCCC !important; margin: 0 3px 0 0 !important;">
		<div class="blocktitle"><span class="titletext">最新回复</span></div>
		<div class="titlecontent">
			<ol>
				<!--{loop $latestreply $k $v}--> 
				<li><em>{$v['lastpost']}</em><a target="_blank" href="{$v['url']}">{$v['subject']}</a></li>
				<!--{/loop}-->
			</ol>
		</div>
	</div>
</div>

<div id="ct" class="wp cl{if $_G['setting']['forumallowside']} ct2{/if}">
	<div id="chart" class="bm bw0 cl">
