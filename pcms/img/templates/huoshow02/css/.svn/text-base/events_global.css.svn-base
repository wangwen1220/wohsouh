@charset "utf-8";
/* CSS Document */
body { font-family:"宋体", arial; margin:0; padding:0; font-size:12px; color:#414141; }
div, form, img, ul, ol, li, dl, dt, dd, p { margin: 0; padding: 0; border: 0; }
li, dl { list-style-type:none; }
h1, h2, h3, h4, h5, h6 { margin:0; padding:0; font-size:12px; font-weight:normal; }
a { color:#414141; text-decoration:none; }
a:hover { color: #d60921; }

.input{border:1px solid #abadb3; width:140px; height:14px; color:#ccc; font-size:12px; padding-top:3px;}
.select{border:1px solid #abadb3; width:60px; height:20px; color:#ccc; font-size:12px;}

.clear { height:0px; line-height:0px; font-size:0px; overflow:hidden; clear:both; }
.kongge { height:10px; width:auto; }
.jju { height:10px; width:auto; }

.yingshi_bj { background-color: #f6f6f6; background-image: url(../images/events/movie_bg.jpg); background-repeat: repeat-x;}
#mian { width:auto; margin:0 auto; height:auto; }
#mian .box {}

/* 头部导航 */
#head { width:auto; height:36px; background:url(../images/events/bg.jpg) 0 160px; }
