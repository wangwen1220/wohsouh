@import 'index-game-global.css';

/*
名称: 天空蓝专题模板样式
理念: 少而精，简洁易读
特色: 适应中文；基于最新主流浏览器
依赖: index-game-global.css
作者: 王文 <wangwen1220#gmail.com>
*/

/* TPL
----------------------------------------------------------------------------- */
/*
 * @name: ui-box
 * @overview: .ui-box
 * @require: null
 */
.ui-box {
	border: 1px solid #B9D5E1;
	margin-bottom: 10px;
}
.ui-box-header {
	height: 37px;
	line-height: 37px;
	color: #444;
	background-color: #ECF4F7;
}
.ui-box-header .title {
	float: left;
	color: #666;
	font-size: 14px;
	font-weight: bold;
	padding: 0 10px;
}
.ui-box-header .more {
	float: right;
	display: inline;
	margin-right: 20px;
	color: #999;
}
.ui-box-header .more .upload {
	padding-right: 12px;
	background: url(../../images/special/index-game-blue/icon-upload.png) no-repeat 100% 50%;
}
.ui-box-header .more a {
	color: #999;
}

/*
 * @name: ui-img-list
 * @overview: .ui-img-list
 * @require: null
 */
.ui-img-list {
	margin: 15px 17px 0;
	*padding-bottom: 15px;
	_padding-bottom: 0;
}
.ui-img-list-item {
	float: left;
	display: inline;
	margin: 0 7px 15px;
	*width: 135px;
}
.ui-img-list-item .img {
	position: relative;
	display: block;
}
.ui-img-list-item .img img {
	display: block;
	width: 135px;
	height: 100px;
}
.ui-img-list-item .img .icon {
	position: absolute;
	left: 50%;
	top: 50%;
	display: block;
	width: 37px;
	height: 36px;
	margin: -18px 0 0 -18px;
	opacity: 0.88;
	filter: alpha(opacity=88);
	background: url(../../images/special/index-game-blue/icon-play.png) no-repeat 0 0;
	/* _background: url(../../images/special/index-game-blue/icon-play-ie6.png) no-repeat 0 0; */
}
.ui-img-list-item .img:hover .icon {
	opacity: 1;
	filter: alpha(opacity=100);
}
.ui-img-list-item .title {
	margin-top: 7px;
	height: 36px;
	line-height: 18px;
	overflow: hidden;
	text-align: center;
	color: #333333;
}
.ui-img-list-item .title-twoline {
	height: 36px;
}
.ui-img-list-item .title a {
	display: block;
	color: #333333;
}

/*
 * @name: ui-list
 * @overview: .ui-list
 * @require: null
 */
.ui-list {
	margin: 10px 4px 10px 22px;
	*padding-bottom: 10px;
}
.ui-list-item {
	float: left;
	display: inline;
	margin-right: 18px;
	width: 284px;
	height: 35px;
	line-height: 35px;
	border-bottom: 1px dotted #eee;
	overflow: hidden;
}
.ui-list-item a {
	float: left;
}
.ui-list-item span {
	float: right;
	color: #666;
}

/*
 * @name: ui-side-box
 * @overview: .ui-side-box
 * @require: null
 */
.ui-side-box {
	width: 318px;
	border: 1px solid #E6E6E6;
	background-color: #fff;
}
.ui-side-box-header {
	height: 37px;
	line-height: 37px;
	padding: 0 10px;
	color: #777;
	font-weight: bold;
	font-size: 14px;
	background-color: #F1F1F1;
}

/* Layout
----------------------------------------------------------------------------- */
/** header **/
#header {
	background-color: #fff;
}

/* logo */
#header .logo a {
	background: url(../../images/special/index-game-blue/logo.png) no-repeat 0 0;
}

/* search */
#header .search input, #header .search button {
	float: left;
	padding: 0 5px;
	height: 26px;
	border: 1px solid #4785D4;
	color: #999;
	font-size: 12px;
	background-color: #fff;
}
#header .search input {
	width: 252px;
}
#header .search input:focus {
	color: #444;
}
#header .search button {
	height: 28px;
	padding: 0 10px;
	color: #fff;
	background-color: #5D95D9;
}
#header .search .search-submit {
	margin: 0 2px 0 -1px;
}

/** nav **/
#nav {
	background: #6299DA url(../../images/special/index-game-blue/bg-nav.png) repeat-x 0 0;
}
#nav .nav-list {
}
#nav .nav-list-item {
	float: left;
}
#nav .nav-list-item a {
	display: block;
	height: 40px;
	line-height: 40px;
	width: 110px;
	color: #fff;
	text-align: center;
	font-size: 14px;
}
#nav .nav-list-item a:hover, #nav .nav-list-item-current a {
	height: 38px;
	line-height: 38px;
	width: 108px;
	border-left: 1px solid #f8f8f8;
	border-right: 1px solid #f8f8f8;
	border-top: 2px solid #1E62B7;
	color: #1E62B7;
	font-weight: bold;
	text-decoration: none;
	background: #f8f8f8 url(../../images/special/index-game-blue/bg-nav-hover.png) repeat-x 0 0;
}

/** Main **/
#content {
	margin-top: 18px;
}
#main .ui-box-download {
	*padding-bottom: 10px;
	_padding-bottom: 0;
}
#main .ui-box-download .header {
	margin: 0 9px;
	height: 35px;
	line-height: 35px;
	border-bottom: 1px solid #D9EBED;
}
#main .ui-box-download .header .site-nav {
	float: left;
	color: #4B4B4B;
}
#main .ui-box-download .header .site-nav .bk {
	color: #999;
}
#main .ui-box-download .header .game-news {
	float: right;
	padding-right: 8px;
	color: #FC3900;
	background: url(../../images/special/index-game-blue/icon-up.png) no-repeat 100% 50%;
}
#main .ui-box-download .download {
	float: left;
	display: inline;
	width: 190px;
	margin: 10px 0 10px 9px;
}
#main .ui-box-download .download .download-btn {
	/* padding-top: 52px; */
	text-align: center;
	background: #FA7800 url(../../images/special/index-game-blue/download-btn.png) no-repeat 0 0;
}
#main .ui-box-download .download .download-btn .alink {
	display: block;
	width: 100%;
	height: 52px;
}
#main .ui-box-download .download .download-btn .download-link {
	height: 33px;
	line-height: 33px;
	font-weight: bold;
	color: #F7D4BF;
}
#main .ui-box-download .download .download-btn .download-link a {
	color: #F7D4BF;
}
#main .ui-box-download .download .download-btn .download-link .bk {
	margin: 0 4px;
}
#main .ui-box-download .download .game-vote {
	height: 19px;
	line-height: 19px;
	margin-top: 10px;
	color: #4B4B4B;
}
#main .ui-box-download .download .game-vote-num {
	display: inline-block;
	padding: 0 2px 0 12px;
	border-radius: 0 3px 3px 0;
	color: #fff;
	background: #0062CA url(../../images/special/index-game-blue/bg-vote.png) no-repeat 0 0;
	_padding: 2px 2px 2px 12px;
}
#main .ui-box-download .download .game-vote-btn {
	display: inline-block;
	margin-left: 4px;
	padding: 0 4px;
	height: 15px;
	line-height: 15px;
	border-radius: 0 2px 2px 0;
	color: #444;
	background: #F1F1F1 url(../../images/special/index-game-blue/bg-vote-btn.png) repeat-x 0 0;
}
#main .ui-box-download .download .game-vote-btn:hover {
	text-decoration: none;
	color: #000;
}
#main .ui-box-download .intro {
	position: relative;
	float: left;
	display: inline;
	width: 406px;
	margin: 10px 9px 10px 15px;
	border-left: 1px dotted #ccc;
}
#main .ui-box-download .intro .intro-title {
	margin-left: 15px;
	font-size: 14px;
	color: #666;
	font-weight: bold;
}
#main .ui-box-download .intro .intro-list {
	margin: 3px 0 0 5px;
}
#main .ui-box-download .intro .intro-list .intro-list-item {
	float: left;
	display: inline;
	margin-left: 10px;
	width: 123px;
	height: 22px;
	line-height: 22px;
	overflow: hidden;
	color: #777;
}
#main .ui-box-download .intro .intro-list .intro-list-item em {
	display: inline-block;
	width: 60px;
	text-align: right;
	color: #555;
}
#main .ui-box-download .intro .intro-list .intro-list-item a {
	color: #EC6800;
	text-decoration: underline;
}
#main .ui-box-download .intro .intro-list .intro-list-item a:hover {
	text-decoration: none;
}
#main .ui-box-download .intro .game-num {
	margin: 5px 0 0 15px;
}
#main .ui-box-download .intro .game-num .game-num-btn {
	display: inline-block;
	margin-right: 5px;
	height: 19px;
	line-height: 19px;
	padding: 0 15px;
	font-weight: bold;
	font-size: 14px;
	color: #eee;
	border-radius: 3px;
	background-color: #0062CA;
}
#main .ui-box-download .intro .game-num .game-num-btn:hover {
	text-decoration: none;
	color: #fff;
}
#main .ui-box-download .intro .game-num .game-weibo {
	position: absolute;
	right: 0;
	top: 0;
	display: block;
	width: 78px;
	height: 17px;
	text-indent: -9999px;
	background: #ccc url(../../images/special/index-game-blue/btn-weibo.png) no-repeat 0 0;
}
#main .ui-box-article {
	padding: 10px;
	background: #FBFBFB url(../../images/special/index-game-blue/bg-box.png) no-repeat 0 0;
}
#main .ui-box-article .article-img {
	float: left;
}
#main .ui-box-article .article-img img {
	display: block;
	width: 320px;
	height: 240px;
}
#main .ui-box-article .article-content, #main .ui-box-article .article-link {
	margin-left: 330px;
}
#main .ui-box-article .article-content {
	line-height: 26px;
}
#main .ui-box-article .article-content em {
	color: #177CDD;
}
#main .ui-box-article .article-link {
	margin-top: 10px;
	font-size: 14px;
	color: #EC6800;
}
#main .ui-box-article .article-link a {
	color: #EC6800;
}

/** Side **/
#side .game-score {
	margin-top: 10px;
	background: #F0F0F0 url(../../images/special/index-game-blue/bg-game-score.png) no-repeat 100% 0;
}
#side .game-score .game-score-box {
	float: left;
	margin-right: 18px;
	width: 100px;
	height: 100px;
	background: #1375C0 url(../../images/special/index-game-blue/bg-game-score-box.png) no-repeat 0 0;
}
#side .game-score .game-score-title {
	height: 25px;
	line-height: 25px;
	overflow: hidden;
	text-align: center;
	color: #fff;
}
#side .game-score .game-score-box-num {
	height: 75px;
	line-height: 75px;
	text-align: center;
	font-size: 60px;
	color: #fff;
	font-family: '微软雅黑',verdana,sans-serif;
}
#side .game-score .game-score-status {
	float: left;
	display: inline;
	margin: 25px 0 0 0;
	width: 200px;
	color: #000;
}
#side .game-score .game-score-status em {
	font-size: 14px;
}
#side .game-score .game-score-btn {
	float: left;
	display: inline;
	margin: 12px 0 0 0;
	padding: 0 10px;
	height: 25px;
	line-height: 25px;
	border: 1px solid #C8C8C8;
	color: #515151;
	font-weight: bold;
	background: #EAEAEA url(../../images/special/index-game-blue/bg-game-score-btn.png) repeat-x 0 0;
}
#side .game-score .game-score-btn:hover {
	text-decoration: none;
	color: #333;
}
#side .game-search {
	margin-top: 10px;
}
#side .game-search input {
	width: 246px;
	height: 28px;
	line-height: 28px;
	border: 1px solid #E6E6E6;
	border-right: none;
	color: #999999;
	text-indent: 10px;
	vertical-align: top;
	background-color: #F1F1F1;
	*margin: -1px 0 0 -10px;
}
#side .game-search input:focus {
	color: #444;
	border-color: #1B7EC9;
}
#side .game-search button {
	width: 73px;
	height: 30px;
	line-height: 30px;
	border: none;
	text-indent: -99999px;
	background: #EAEAEA url(../../images/special/index-game-blue/btn-game-search.png) repeat-x 0 0;
}
#side .ui-side-box {
	border-top: none;
}
#side .ui-side-box .content {
	margin: 15px 10px;
}
#side .ui-side-box .title {
	display: inline-block;
	margin-bottom: 8px;
	padding: 0 4px 2px 0;
	color: #333;
	border-bottom: 2px solid #FB7100;
	*display: inline;
	*zoom: 1;
}
#side .ui-side-box .link-list {
	margin-bottom: 15px;
	line-height: 24px;
}
#side .ui-side-box .link-list a {
	color: #666;
}
#side .game-desc {
	margin-top: 10px;
	border-top: 1px solid #E6E6E6;
}
#side .game-download .game-info {
	padding-bottom: 10px;
	margin-bottom: 10px;
	border-bottom: 1px dotted #EFEFEF;
	color: #666;
	line-height: 24px;
}
#side .game-download .game-info em {
	font-weight: bold;
}
#side .game-download .game-info strong {
	font-weight: normal;
	color: #EC6800;
}
#side .config-info .config-list {
	margin-bottom: 15px;
	line-height: 24px;
	color: #666666;
}
#side .game-recommend .game-box {
	margin: 10px 0;
	padding: 0 20px 10px;
	background: url(../../images/special/index-game-blue/bk-game-box.png) repeat-x 50% 100%;
}
#side .game-recommend .game-box-last {
	margin-bottom: 0;
	padding-bottom: 0;
	background: none;
}
#side .game-recommend .game-box .img {
	float: left;
}
#side .game-recommend .game-box .img img {
	display: block;
	width: 120px;
	height: 80px;
}
#side .game-recommend .game-box .game-title {
	margin-left: 135px;
	line-height: 22px;
	font-weight: bold;
	color: #E46109;
}
#side .game-recommend .game-box .game-title a {
	color: #E46109;
}
#side .game-recommend .game-box .game-info {
	margin-left: 135px;
	line-height: 20px;
	color: #666;
}

/*========== 列表页 ==========*/
#main .ui-box-img-list {
	border: none;
}