{template "content","movie_header"}
{pc:comment action="get_comment" commentid="$commentid"} 
{php $comment = $data;} 
{/pc}
<!--Main Body-->
<div class="main_body">
	<h2 class="comment_title">
	<a href="{if $comment[url]}{$comment[url]}{else}{$url}{/if}">{if
			$comment[title]}{$comment[title]}{else}{$title}{/if}</a>
			<a href='#comment' ><span>[我来说两句]</span></a></h2>
	<!-- 评论正文 -->
	<div class="Subpage_left">
		<!-- 评论列表 -->
		<div class='ui_comment'>
			<h3 class='ui_comment_title'><strong>评论列表</strong> <span>（评论<em>{if
						$comment[total]}{$comment[total]}{else}0{/if}</em>）以下网友评论只代表网友个人观点，不代表本站观点。</span></h3>
			{pc:comment action="lists" commentid="$commentid" siteid="$siteid"
			page="$_GET[page]" hot="$hot" num="20"} 
			<dl class='ui_comment_list'>
				{loop $data $r}
				<dt class='ui_comment_list_member'>{if
				$r[userid]}{get_nickname($r[userid])}{else}{$r[username]}{/if} <span>{direction($r[direction])}</span></dt>
				<dd class='ui_comment_list_content'>{$r[content]}</dd>
				{/loop}
			</dl>
		</div>
		<form class='comment_form' action="{APP_PATH}index.php?m=comment&c=index&a=post&commentid={$commentid}"	method="post">
			<input type="hidden" name="title" value="{urlencode(($comment[title] ? $comment[title] : $title))}">
			<input type="hidden" name="url" value="{urlencode(($comment[url] ? $comment[url] : $url))}">
			<a name="comment"></a>
			<h3>我来说两句</h3>
			<textarea rows="8" cols="80" name="content" class="comment_content"></textarea>
			<div class="send_btn">
				<input type="submit" class="ui_send_btn" value="发表评论" />
				<span>
					{if $userid}{get_nickname()}
					<a href="http://space.huoshow.com/member.php?mod=logging&action=logout&referer={urlencode($url)}">退出</a>
					{else}
					<a href="http://space.huoshow.com/member.php?mod=logging&action=login&referer={urlencode($url)}" >登录</a> | 
					<a href="http://space.huoshow.com/member.php?mod=register&referer={urlencode($url)}" class="blue">注册</a>
					{if !$setting[guest]}<em>需要登录才可以发表评论</em>{/if}
					{/if}
				</span>
			</div>

			<br /><!--<p>请注意：<br />自觉遵守：爱国、守法、文明的原则<br />觉遵守：爱国、守法、文明的原则觉遵守：爱国、守法、文明的原则觉遵守：爱国、守法、文明的原则觉遵守：爱国、守法、文明的原则觉遵守：爱国、守法、文明的原则觉遵守：爱国、守法、文明的原则觉遵守：爱国、守法、文明的原则觉遵守：爱国、守法.</p>-->
		</form>
		<!-- 评论列表结束 -->
	</div>
	<!-- 评论正文结束 -->

	<div class="Subpage_right">
		<!--今日推荐-->
		<!--#include virtual="/api.php?op=movie&p=get_recommend_day_news&siteid={$siteid}&catid=12&other_catids=131,14|游戏,109|超模"-->
		<!--今日推荐结束-->

		<!-- 评论排行 -->
		<div class="ui_fold_box ui_ranking_box top_comment">
			<h3 class='ui_fold_box_title'><span>评论排行</span></h3>
			{pc:comment action="bang" cache="3600"}
			<ol class='ui_fold_box_content'>
				{loop $data $r}
				<li class='ui_fold_box_content_selected'>
					<span class='top_no'>{$n}</span>
					<h4><a href="{$r[url]}" title="mytitle">{str_cut($r[title],
						40)}</a>({$r[total]})</h4>
				</li>
				{/loop}
			</ol>
			{/pc}
		</div>
		<!-- 评论排行结束 -->
	</div>
	<div class="clear"></div>
</div>
{template "content","footer"}