<!--热点排行-->
{pc:content action="hits_all_channel" siteid="$siteid" order="views DESC" num="10" cache=3600}
		<div class="ui_fold_box ui_fold_box_redian">
			<h3 class='ui_fold_box_title'><span>热点排行</span></h3>
			<ul class='ui_fold_box_content'>
            {loop $data $r}
				<li class='{if $n==1 && !empty($r[thumb])}ui_fold_box_content_selected{else}top_no{/if}'> <span class='top_no'>{$n}</span>
					<div> <img src='{thumb($r[thumb],106,82)}' width='106' height='82' />
						<h4><a href="{$r[url]}" title="{$r[title]}" target="_blank">{str_cut($r[title],60,'..')}</a></h4>
						<p>{str_cut($r[description],80,'..')}</p>
					</div>
				</li>
             {/loop}
			</ul>
		</div>
{/pc}
		<!--热点排行结束-->