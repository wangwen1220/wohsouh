<!DOCTYPE html>
<html>
<head>
	<meta charset='utf-8' />
	<title>{if isset($SEO['title']) && !empty($SEO['title'])}{$SEO['title']}{/if} 火秀网</title>
	<meta name="keywords" content="{$SEO['keyword']}">
	<meta name="description" content="{$SEO['description']}">
	<meta name='author' content='火秀网' />
	<meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1' />
	<link href='{CSS_PATH}hs-game-apple.css' rel='stylesheet' />
	<!-- <script src='{JS_PATH}seajs/sea.js' id='seajsnode' data-main='hs-game-main'></script> -->
	<!-- <script src='{JS_PATH}cssrefresh.js'></script> -->
	<!-- <script src='{JS_PATH}live.js'></script> -->
	<link href='http://www.huoshow.com/favicon.ico' rel='icon' />
</head>

<body class='game-apple'>
	{template 'content', 'hs_topbar'}
	{template 'content', 'game_header_apple'}

	<!-- 主内容 -->
	<div id='content-main' class='ui-layout fn-clear'>
		<div class='ui-layout-item ui-layout-item-left'>
			<div id='myfocus-games' class='ui-myfocus'><!--焦点图盒子-->
				<div class="loading"></div><!--载入画面(可删除)-->
				<div class="pic"><!--图片列表-->
					<ul>
					{pc:content  action="position" posid="541" order="listorder DESC" num="6" }
   					{loop $data $r}
						<li><a href="{str_replace('http://www.huoshow.com/games/','http://game.huoshow.com/',$r[url])}" target='_blank'><img src="{thumb($r[thumb],308,231)}" thumb="" alt="{str_cut($r['title'],60,'')}" width='308' height='231' /></a></li>
					{/loop}
					{/pc}
					</ul>
				</div>
			</div>
		</div>

		<div class='ui-layout-item ui-layout-item-center'>
		{pc:content  action="position" posid="542" order="listorder DESC" num="5" }
   			{loop $data $r}
			{if $n==1}
			<h2 class='ui-newgame-title'><a href="{str_replace('http://www.huoshow.com/games/','http://game.huoshow.com/',$r[url])}" target='_blank'>{str_cut($r['title'],60,'')}</a></h2>
			{else}
			{if $n==2}<div class='ui-newgame-link'>{/if}<a href="{str_replace('http://www.huoshow.com/games/','http://game.huoshow.com/',$r[url])}" target='_blank'>[{str_cut($r['title'],16,'')}]</a>{if $n==5}</div>{/if}
			{/if}
			{/loop}
			{/pc}
			<ul class='ui-list ui-list-main hr'>
			{pc:content action="lists" catid="304" order="id DESC" num="10"}
			{loop $data $r}
				<li class='ui-list-item {if $n==5}bk{/if}'><a href="{str_replace('http://www.huoshow.com/games/','http://game.huoshow.com/',getCatNameFromCatid($r[catid]))}" target='_blank'>{getCatNameFromCatid($r[catid])}</a> | {if $n==1 || $n==6}<strong>{/if}<a href="{str_replace('http://www.huoshow.com/games/','http://game.huoshow.com/',$r[url])}" target='_blank'>{str_cut($r['title'],60,'')}</a>{if $n==1 || $n==6}</strong>{/if}</li>
			{/loop}
			{/pc}
			</ul>
		</div>

		<div class='ui-layout-item ui-layout-item-right'>
		{pc:content  action="position" posid="543" order="listorder DESC" num="3" }
   			{loop $data $r}
			<div class='ui-img'>
				<a target='_blank' class='img' href="{str_replace('http://www.huoshow.com/games/','http://game.huoshow.com/',$r[url])}" ><img src='{thumb($r[thumb],238,98)}' alt='' width='238' height='98' /></a>
				<h4 class='title'><a href="{str_replace('http://www.huoshow.com/games/','http://game.huoshow.com/',$r[url])}" target='_blank'>{str_cut($r['title'],40,'')}</a></h4>
			</div>
		{/loop}
		{/pc}
		</div>
	</div>

	<!-- 焦点内容 -->
	<div id='content-focus' class='ui-box fn-clear'>
		<div class='ui-box-header'>
			<h2 class='title'>焦点内容</h2>
			<div class='link'><!--<a href='#'>游戏</a> | <a href='#'>软件</a> | <a href='#'>专题</a> | <a href='#'>攻略</a> | <a href='#'>视频</a> | <a class='more' href='#'>更多&gt;&gt;</a>--></div>
		</div>

		<div class='ui-box-item'>
			<div class='ui-art'>
			{pc:content  action="position" posid="568" order="listorder DESC" num="1" }
                {php $arr = array();}
                {loop $data $r}
                {php $arr[] = $r[id];}
				<a target='_blank' class='img' href="{str_replace('http://www.huoshow.com/games/','http://game.huoshow.com/',$r[url])}" ><img src='{thumb($r[thumb],98,98)}' alt='' width='98' height='98' /></a>
				<h3 class='title'><a href="{str_replace('http://www.huoshow.com/games/','http://game.huoshow.com/',$r[url])}" target='_blank'>{str_cut($r['title'],35,'')}</a></h3>
				<p class="content">{str_cut($r['description'],162,'')} <a target='_blank' class='more' href="{str_replace('http://www.huoshow.com/games/','http://game.huoshow.com/',$r[url])}" >了解更多<span class='mark'>&#9658;</span></a></p>
			    {/loop}
			{/pc}
			</div>
			<ul class='ui-list hr'>
			{pc:content action="lists" catid="360" id="$arr" order="id DESC" num="6"}
			{loop $data $r}
				<li class='ui-list-item'><a href="{str_replace('http://www.huoshow.com/games/','http://game.huoshow.com/',$r[url])}" target='_blank'>{str_cut($r['title'],96,'')}</a></li>
			{/loop}
		    {/pc}
			</ul>


		</div>

		<div class='ui-box-item'>

			<div class='ui-art'>
			{pc:content  action="position" posid="569" order="listorder DESC" num="1" }
            {php $arr = array();}
   			{loop $data $r}
                {php $arr[] = $r[id];}
				<a target='_blank' class='img' href="{str_replace('http://www.huoshow.com/games/','http://game.huoshow.com/',$r[url])}" ><img src='{thumb($r[thumb],98,98)}' alt='' width='98' height='98' /></a>
				<h3 class='title'><a href="{str_replace('http://www.huoshow.com/games/','http://game.huoshow.com/',$r[url])}" target='_blank'>{str_cut($r['title'],35,'')}</a></h3>
				<p class="content">{str_cut($r['description'],162,'')} <a target='_blank' class='more' href="{str_replace('http://www.huoshow.com/games/','http://game.huoshow.com/',$r[url])}" >了解更多<span class='mark'>&#9658;</span></a></p>
			{/loop}
			{/pc}
			</div>
            <ul class='ui-list hr'>
		    {pc:content action="lists" catid="361" order="id DESC" id="$arr" num="6"}
			{loop $data $r}
				<li class='ui-list-item'><a href="{str_replace('http://www.huoshow.com/games/','http://game.huoshow.com/',$r[url])}" target='_blank'>{str_cut($r['title'],96,'')}</a></li>
			{/loop}
		    {/pc}
            </ul>
		</div>

		<div class='ui-box-item'>

			<div class='ui-art'>
			{pc:content  action="position" posid="570" order="listorder DESC" num="1" }
                {php $arr = array();}
                {loop $data $r}
                {php $arr[] = $r[id];}
				<a target='_blank' class='img' href="{str_replace('http://www.huoshow.com/games/','http://game.huoshow.com/',$r[url])}" ><img src='{thumb($r[thumb],98,98)}' alt='' width='98' height='98' /></a>
				<h3 class='title'><a href="{str_replace('http://www.huoshow.com/games/','http://game.huoshow.com/',$r[url])}" target='_blank'>{str_cut($r['title'],35,'')}</a></h3>
				<p class="content">{str_cut($r['description'],162,'')} <a target='_blank' class='more' href="{str_replace('http://www.huoshow.com/games/','http://game.huoshow.com/',$r[url])}" >了解更多<span class='mark'>&#9658;</span></a></p>
			{/loop}
			{/pc}
			</div>
            <ul class='ui-list hr'>
		    {pc:content action="lists" catid="362" id="$arr" order="id DESC" num="6"}
			{loop $data $r}
				<li class='ui-list-item'><a href="{str_replace('http://www.huoshow.com/games/','http://game.huoshow.com/',$r[url])}" target='_blank'>{str_cut($r['title'],96,'')}</a></li>
			{/loop}
		    {/pc}
            </ul>
		</div>
	</div>

	<!-- 软件推荐 -->
	<div id='content-recomment' class='ui-box fn-clear'>
		<div class='ui-box-header'>
			<h2 class='title'>每周游戏及软件推荐</h2>
			<div class='link'><!--<a href='#'>游戏</a> | <a href='#'>软件</a> | <a href='#'>专题</a> | <a href='#'>攻略</a> | <a href='#'>视频</a> | <a class='more' href='#'>更多&gt;&gt;</a>--></div>
		</div>
		<ul class='ui-art-list ui-art-list-game fn-clear'>
		{pc:content action="position" posid="544" catid="$catid" order="listorder DESC" num="15" }
   		{loop $data $r}
			<li class='ui-art-item'>
				<a target='_blank' class='img img-mgame' href="{str_replace('http://www.huoshow.com/games/','http://game.huoshow.com/',$r[url])}" ><img src='{thumb($r[thumb],75,75)}' alt='' width='75' height='75' /><span class='mark-img'></span></a>
				<h3 class='title'><a href="{str_replace('http://www.huoshow.com/games/','http://game.huoshow.com/',$r[url])}" target='_blank'>{$r[title]}</a></h3>
				<div class="content">
					<p><em>{$r[chargingmode]}</em>&nbsp;<span>{$r[price]}</span></p>
					<p>{getCatNameFromCatid($r[catid])}</p>
				</div>
			</li>
		{/loop}
		{/pc}
		</ul>
	</div>

	<!-- iPhone 专区 -->
	<div id='content-prefecture' class='ui-box fn-clear'>
		<div class='ui-box-header'>
			<h2 class='title'>iPhone 专区</h2>
			<div class='link'><!--<a href='#'>游戏</a> | <a href='#'>软件</a> | <a href='#'>专题</a> | <a href='#'>攻略</a> | <a href='#'>视频</a> | <a class='more' href='#'>更多&gt;&gt;</a>--></div>
		</div>

		<div class='ui-box-item ui-box-item-left'>
			<div class='ui-header'>
				<h2 class='title'>本周游戏排行</h2>
				<div class='link'><a target='_blank' class='more' href="{str_replace('http://www.huoshow.com/games/','http://game.huoshow.com/',$CATEGORYS[303][url])}">更多&gt;&gt;</a></div>
			</div>
			<ol class='ui-ranking'>
			{pc:content action="hits" catid="303" num="10" order="monthviews DESC" cache="3600"}
			{loop $data $r}
				<li class='ui-ranking-item ui-ranking-item-cur'>
					<a target='_blank' class='img img-mgame img-mgame-72' href="{str_replace('http://www.huoshow.com/games/','http://game.huoshow.com/',$r[url])}" ><img src='{thumb($r[thumb],72,72)}' alt='' width='72' height='72' /><span class='mark-img'></span></a>
					<span class='num num-hot'>{$n}</span>
					<h3 class='title'><a href="{str_replace('http://www.huoshow.com/games/','http://game.huoshow.com/',$r[url])}" target='_blank'>{str_cut($r['title'],45,'')}</a></h3>
					<p class="content">{str_cut($r['description'],140,'')}<a target='_blank' class='more' href="{str_replace('http://www.huoshow.com/games/','http://game.huoshow.com/',$r[url])}" >[详情]</a></p>
				</li>
			{/loop}
			{/pc}
			</ol>
		</div>

		<div class='ui-box-item ui-box-item-center'>
			<div class='ui-header'>
				<h2 class='title'>最新游戏</h2>
				<div class='link link-more'><a target='_blank' class='more' href="{str_replace('http://www.huoshow.com/games/','http://game.huoshow.com/',$CATEGORYS[306][url])}">更多&gt;&gt;</a></div>
			</div>
			{pc:content action="lists" catid="305" order="id DESC" num="9"}
			{loop $data $r}
			{if $n==1}
			<div class='ui-art fn-clear'>
				<a target='_blank' class='img' href="{str_replace('http://www.huoshow.com/games/','http://game.huoshow.com/',$r[url])}" ><img src='{thumb($r[thumb],122,90)}' alt='' width='122' height='90' /></a>
				<h3 class='title'><a href="{str_replace('http://www.huoshow.com/games/','http://game.huoshow.com/',$r[url])}" target='_blank'>{str_cut($r['title'],70,'')}</a></h3>
				<p class="content">{str_cut($r['description'],60,'')} <a target='_blank' class='more' href="{str_replace('http://www.huoshow.com/games/','http://game.huoshow.com/',$r[url])}" >[详情]</a></p>
			</div>
			{else}
			{if $n==2}<ul class='ui-list hr'>{/if}
				<li class='ui-list-item'><a href="{str_replace('http://www.huoshow.com/games/','http://game.huoshow.com/',$r[url])}" target='_blank'>{str_cut($r['title'],70,'')}</a></li>
			{if $n==9}</ul>{/if}
			{/if}
			{/loop}
			{/pc}
		</div>

		<div class='ui-box-item ui-box-item-right'>
			<div class='ui-header'>
				<h2 class='title'>iphone游戏推荐</h2>
			</div>
			<ul class='ui-hotgame-list'>
			{pc:content  action="position" posid="545" order="listorder DESC" num="5" }
   			{loop $data $r}
				<li class='ui-hotgame-list-item'>
					<a target='_blank' class='img img-mgame img-mgame-50' href="{str_replace('http://www.huoshow.com/games/','http://game.huoshow.com/',$r[url])}" ><img src='{thumb($r[thumb],50,50)}' alt='' width='50' height='50' /><span class='mark-img'></span></a>
					<h3 class='title'><a href="{str_replace('http://www.huoshow.com/games/','http://game.huoshow.com/',$r[url])}" target='_blank'>{str_cut($r['title'],60,'')}</a></h3>
					<span class='num'>{$r['stars']}</span>
					<div class="content">
						<p>限免 <del>￥18</del></p>
						<p>下载{$r['downfiles']}次</p>
					</div>
					<a target='_blank' class='button' href="{str_replace('http://www.huoshow.com/games/','http://game.huoshow.com/',$r[url])}" ></a>
				</li>
			{/loop}
			{/pc}
			</ul>
		</div>
	</div>

	<!-- iPhone 壁纸 -->
	<div id='content-wallpaper' class='ui-box fn-clear'>
		<div class='ui-box-header'>
			<h2 class='title'>iPhone 壁纸</h2>
			<div class='link'><!--<a href='#'>游戏</a> | <a href='#'>软件</a> | <a href='#'>专题</a> | <a href='#'>攻略</a> | <a href='#'>视频</a> | <a class='more' href='#'>更多&gt;&gt;</a>--></div>
