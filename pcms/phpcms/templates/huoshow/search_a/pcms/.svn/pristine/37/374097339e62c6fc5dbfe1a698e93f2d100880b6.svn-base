					<h2 class='title'>近期关注</h2>
					<div class='link'><a class='more' href='#'>更多&gt;&gt;</a></div>
				</div>
				<div id='myfocus-classichc' class='ui-myfocus'>
					<div class="loading"></div>
					<div class="pic">
						<ul>
						{pc:content action="lists" catid="$catid" order="listorder DESC LIMIT 1,5--"}
						{loop $data $r}
							<li><a href="{$r[url]}"><img src="{thumb($r[thumb],326,216)}" thumb="" alt="{$r[title]}" width='326' height='216' /></a></li>
						{/loop}
						{/pc}	
						</ul>
					</div>
				</div>

				<ul class='ui-list'>
				{pc:content action="lists" catid="$catid" order="listorder DESC LIMIT 5,4--"}
				{loop $data $r}
					<li class='ui-list-item'>{str_cut($r['title'],60,'')}</a></li>
				{/loop}
				{/pc}	
				</ul>
				<ul class='ui-list hr'>
				{pc:content action="lists" catid="$catid" order="listorder DESC LIMIT 10,4--"}
				{loop $data $r}
					<li class='ui-list-item'>{str_cut($r['title'],60,'')}</a></li>
				{/loop}
				{/pc}	
				</ul>
			</div>

			<div class='article-related article-gallery'>
