/*
 * @name: ui-pic-list
 * @overview: 通用图集样式
 * @require: null
 */
.ui-pic-list {
	margin: 10px -10px 0 0;
	*margin-bottom: 10px;
}
.ui-pic-list-item {
	position: relative;
	float: left;
	display: inline;
	margin: 0 10px 10px 0;
}
.ui-pic-list-item .img {
	position: relative;
	display: block;
}
.ui-pic-list-item .img .icon-play {
	position: absolute;
	top: 50%;
	left: 50%;
	display: block;
	width: 37px;
	height: 37px;
	margin-left: -18px;
	margin-top: -18px;
	background: url(../images/game/icon-play.png) no-repeat 0 0;
}
.ui-pic-list-item .img:hover .icon-play {
	background: url(../images/game/icon-play-hover.png) no-repeat 0 0;
}
.ui-pic-list-item .title {
	display: block;
	margin-top: 4px;
	height: 18px;
	line-height: 18px;
	overflow: hidden;
	color: #333;
	text-align: center;
}
/* 遮罩标题 */
.ui-pic-list-item .title-mark {
	display: block;
	position: absolute;
	bottom: 0;
	left: 0;
	right: 0;
	padding: 0 5px;
	_padding: 0;
	_width: 100%;
	height: 19px;
	line-height: 19px;
	overflow: hidden;
	text-align: center;
	color: #fff;
	background-color: rgba(0,0,0,.65);
	background-color: #000\9;
	opacity: 0.72\9;
	filter: alpha(opacity=72);
}
.ui-pic-list-item .title-mark a {
	color: #fff;
	vertical-align: middle;
}
.ui-pic-list-item .title-mark a:hover {
	text-decoration: none;
	/* color: #D83642; */
}
