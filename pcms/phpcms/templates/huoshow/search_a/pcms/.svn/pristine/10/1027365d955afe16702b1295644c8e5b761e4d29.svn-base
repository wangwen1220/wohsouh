/* Layout
----------------------------------------------------------------------------- */
/** 居中 **/
#header, #content, .ui-layout, .ui-box, .ui-gallery {
	margin-left: auto;
	margin-right: auto;
}

/** Header **/
.header-wrapper {
	background: #fff url(../images/video/bg-nav.png) repeat-x 0 100%;
}
#header {
	width: 960px;
	padding-top: 31px;
}

/* logo */
#header .title {
	float: left;
	margin: 21px 0 5px;
}
#header .title .logo {
	float: left;
	width: 147px;
	height: 60px;
	text-indent: -9999px;
	outline: none;
	background: url(../images/video/logo-movie.png) no-repeat 0 0;
}
body.tv #header .title .logo {
	background-image: url(../images/video/logo-tv.png);
}

/* search */
#header .search {
	float: right;
	display: inline;
	margin-top: 21px;
	width: 287px;
}
#header .search .search-wd {
	width: 195px;
	padding-left: 35px;
	height: 27px;
	line-height: 27px;
	border: 1px solid #B9B9B9;
	border-right: none;
	border-radius: 5px 0 0 5px;
	color: #999;
	vertical-align: top;
	background: #fff url(../images/game/bg-search-wd.png) no-repeat 0 0;
	*margin-top: -1px;
}
#header .search .search-wd:focus {
	color: #444;
}
#header .search .search-submit {
	width: 56px;
	height: 29px;
	border: none;
	text-indent: -99999px;
	background: #D71128 url(../images/video/btn-search-submit.png) no-repeat 0 0;
}
#header .search .search-hotspot {
	height: 21px;
	line-height: 21px;
	overflow: hidden;
	color: #999;
}

/* Nav */
#nav {
	background: #EFEFEF url(../images/video/bg-nav.png) repeat-x 0 0;
}
#nav .nav-item {
	float: left;
	display: inline;
	margin-right: 4px;
	/* width: 79px; */
}
#nav .nav-item-link {
	display: block;
	width: 79px;
	height: 32px;
	text-align: center;
	color: #fff;
	outline: none;
	font: 14px/32px '微软雅黑', '黑体';
}
#nav .nav-item-cur .nav-item-link, #nav .nav-item-link:hover {
	text-decoration: none;
	color: #000;
	background: url(../images/game/bg-nav-item-current.png) no-repeat 50% 100%;
	_background: url(../images/game/bg-nav-item-current-ie6.png) no-repeat 50% 100%;
}

/** Content **/
#content {
	width: 960px;
	margin: 10px auto;
	background-color: #fff;
	overflow: hidden;/* TODO */
	*zoom: 1;
}
#main {
	float: left;
	display: inline;
	margin: 10px 0;
	width: 655px;
}
#side {
	float: right;
	display: inline;
	margin: 10px 0;
	width: 280px;
}

/** 列表内容页通用 **/
#main .ui-pager {
	text-align: left;
}
#side .ui-box-side-pic .ui-pic-list {
	margin-left: 10px;
}
#side .ui-box-side-art .ui-art {
	margin-top: 15px;
}
#side .ui-box-side-art .ui-list a {
	color: #333;
}