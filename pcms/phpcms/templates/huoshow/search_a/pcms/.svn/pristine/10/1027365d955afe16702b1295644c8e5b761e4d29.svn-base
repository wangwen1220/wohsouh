/*
 * @name: ui-gallery-list
 * @overview: 通用图集样式
 * @require: null
 */
.ui-gallery-list {
	margin: 15px -37px 0 0;
}
.ui-gallery-list-item {
	float: left;
	display: inline;
	margin: 0 37px 20px 0;
}
.ui-gallery-list-item .img {
	display: block;
	position: relative;
	*zoom: 1;
}
.ui-gallery-list-item .img:hover {
	text-decoration: none;/* 操蛋的 IE6 */
}
.ui-gallery-list-item .img .time {
	display: inline-block;
	position: absolute;
	bottom: 0;
