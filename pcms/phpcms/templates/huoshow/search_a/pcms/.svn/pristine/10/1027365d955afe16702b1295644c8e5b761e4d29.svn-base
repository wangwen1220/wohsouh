/* Global
----------------------------------------------------------------------------- */
/* 默认文字和背景颜色 */
body {
	color: #535353;
	_word-wrap: break-word;/* 操蛋的 IE6 连续字符撑开布局问题 */
}

/* 链接样式 */
a, a:link {
	color: inherit;
}
a:hover, a:active {
	color: #CF0716;
}

/* 清除图片底部空白间隙 */
img {
	vertical-align: top;
}

/* 默认表单样式 */
input, textarea {
	color: #999;
}
input:focus, textarea:focus {
	color: #444;
}

/* 返回顶部 */
.back-to-top {
	display: none;
	width: 54px;
	height: 54px;
	position: fixed;
	_position: absolute;
	right: 10px;
	bottom: 100px;
	_bottom: auto;
	background: url(../images/game/back-to-top.png) no-repeat;
	cursor: pointer;
	opacity: .6;
	filter: Alpha(opacity=60);
}
.back-to-top:hover {
	opacity: 1;
	filter: alpha(opacity=100);
}

/* TPL
----------------------------------------------------------------------------- */
/*
 * @name: ui-header
 * @overview: 通用标题样式
 * @require: null
 */
.ui-header {
	position: relative;
	height: 32px;
	line-height: 32px;
	margin: 5px 0;
	padding: 0 10px;
}
.ui-header .title {
	padding-left: 10px;
	color: #3E3E3E;
	font: 14px/32px '微软雅黑','黑体','宋体',arial,verdana,sans-serif;
	background: url(../images/game/icon-ui-title.png) no-repeat 0 50%;
}
.ui-header .link {
	position: absolute;
	top: 0;
	right: 10px;
	color: #666;
}
.ui-header .link a {
	color: #666;
}

/*
 * @name: ui-header-side
 * @overview: 边栏标题样式
 * @require: ui-header
 */
.ui-header-side {
	position: relative;
	margin: 0 0 10px;
	padding: 0;
	height: 35px;
	line-height: 35px;
	border-bottom: 1px solid #666;
	background: #F0F0F0;
}
.ui-header-side .title {
	display: inline-block;
	*display: inline;
	*zoom: 1;
	margin-bottom: -1px;
	padding: 0 10px;
	border-bottom: 1px solid #CF0716;
	font: 14px/35px '微软雅黑','黑体','宋体',arial;
	color: #333;
	background: none;
	_position: relative;
}
.ui-header-side .link {}

/*
 * @name: ui-header-tab
 * @overview: 带 Tab 切换的标题样式
 * @require: ui-header
 */
.ui-header-tab {
	padding-left: 0;
	border-bottom: 3px solid #E5E5E5;
}
.ui-header-tab .title {
	color: #333;
	font-size: 18px;
}
.ui-header-tab .link {
	top: auto;
	bottom: 0;
	height: 26px;
}
.ui-header-tab .link a {
	display: inline-block;
	height: 24px;
	line-height: 24px;
	padding: 0 15px;
	border: 1px solid transparent;
	_border: 1px solid #fff;
	color: #666;
	font-size: 14px;
	text-decoration: none;
}
.ui-header-tab .link a:hover,
.ui-header-tab .link a.cur {
	border-color: #E5E5E5;
	border-top: 2px solid #C91522;
	border-bottom: none;
	color: #000;
	outline: none;
}

/*
 * @name: ui-list
 * @overview: 通用列表样式
 * @require: null
 */
.ui-list {
	margin: 10px;
}
.ui-list-item {
	height: 26px;
	line-height: 26px;
	overflow: hidden;
	padding-left: 10px;
	background: url(../images/game/icon-list-gray.png) no-repeat 0 50%;
	*background: url(../images/game/icon-list-gray.png) no-repeat 0 12px;
}
.ui-list-item a {
	color: #666;
}
.ui-list-item strong a {
	color: #333;
	font-weight: bold;
}
.ui-list-item .cnt {
	display: inline-block;
	height: 100%;
	width: 80%;
	overflow: hidden;
}

/*
 * @name: ui-list-inline
 * @overview: 通用行内列表样式
 * @require: ui-list
 */
.ui-list-inline {
	margin: 0 10px;
}
.ui-list-inline .ui-list-item {
	display: inline-block;
	width: 45%;
	height: 20px;
	line-height: 20px;
	*display: inline;
	*zoom: 1;
}
.ui-list-inline .ui-list-item a {
	color: #333;
}

/*
 * @name: ui-list-content
 * @overview: 内容列表页通用列表样式
 * @require: ui-list
 */
.ui-list-content {
	margin: 15px 0;
	padding-bottom: 15px;
	border-bottom: 1px solid #EBEBEB;
	font-size: 14px;
}
.ui-list-content .ui-list-item {
	height: 30px;
	line-height: 30px;
	overflow: hidden;
}
.ui-list-content .ui-list-item .cnt {
	float: left;
	width: 450px;
	overflow: hidden;
	color: #333;
}
.ui-list-content .ui-list-item .date {
	float: right;
	width: 120px;
	color: #666;
}

/*
 * @name: ui-pager
 * @overview: 普通分页模板
 * @require: null
 */
.ui-pager {
	margin: 25px 0;
	text-align: center;
	/* line-height: 23px; */
}
.ui-pager a, .ui-pager span {
	display: inline-block;
	margin-right: 5px;
	padding: 0 6px;
	height: 23px;
	line-height: 23px;
	border: 1px solid #DFDFDF;
	color: #666;
	font-size: 14px;
	text-align: center;
	text-decoration: none;
}
.ui-pager .num {
	padding: 0 9px;
	font-weight: bold;
}
.ui-pager .current {
	border-color: #CF0716;
	color: #fff;
	background-color: #CF0716;
}
.ui-pager a:hover, .ui-pager a:active {
	border-color: #ccc;
	background-color: #f5f5f5;
	text-decoration: none;
}
.ui-pager .disabled {
	border: 1px solid #eee;
	color: #bbb;
	cursor: default;
}
.ui-pager .ellipsis {
	margin-right: 2px;
	padding: 0;
	border: none;
}

/*
 * @name: ui-position
 * @overview: 当前位置导航模板
 * @require: null
 */
.ui-position {
	margin-bottom: 20px;
	padding: 8px 0;
	border-top: 1px solid #DFDFDF;
	border-bottom: 1px solid #DFDFDF;
	color: #999;
}

/*
