<!DOCTYPE html>
<html>
<head>
	<meta charset='utf-8' />
	<title>{if isset($SEO['title']) && !empty($SEO['title'])}{$SEO['title']}{/if}{$SEO['site_title']}</title>
	<meta name="keywords" content="{$SEO['keyword']}">
	<meta name="description" content="{$SEO['description']}">
	<meta name='author' content='火秀' />
	<meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1' />
	<link href='{CSS_PATH}hs-game-global.css' rel='stylesheet' />
	<!-- <script src='{JS_PATH}cssrefresh.js'></script> -->
	<link href='/favicon.ico' rel='icon' />
</head>

<body class='game-yxk'>
	{template 'content', 'hs_topbar'}
	{template 'content', 'game_header_product'}
	<div id='content'>
		<!-- 主内容 -->
		<div id='main' class='game-yxk'>
			<div id='select'>
				<!--/*** div class='filter fn-clear'>
					<dl class='order'>
						<dt>排序：</dt>
						<dd class='default cur'><a href='#'>默认</a></dd>
						<dd><a href='#'>更新时间</a></dd>
						<dd><a href='#'>发售日</a></dd>
						<dd><a href='#'>游戏下载量</a></dd>
					</dl>
					<a class='reset' href='#'>重新筛选</a>
				</div>***/-->
				<dl class='select-item fn-clear'>
					<dt>类型：</dt>
					<dd>
						<a {if $catid=282}class='all cur'{/if} href='{$CATEGORYS[$catid][url]}'>全部</a>
					{loop subcat($catid,0,0,$siteid) $r}
						<a href='{$r[url]}' {if $catid==$r[catid]} class= "all cur"{/if}>{$r[catname]}</a>
					{/loop}
					</dd>
				</dl>
			</div>

			<div id='games'>
				{pc:content action="lists" catid="$catid" num="5" order="id DESC" page="$page"}
				{loop $data $r}
				<div class='ui-gameshow fn-clear'>
					<a class='img' href='{$r[url]}' target='_blank'><img src='{thumb($r[thumb],176,254)}' alt='' width='176' height='254' /></a>
					<h2 class='title'><a href='{$r[url]}' target='_blank' title='{$r[title]}'>{$r[title]}</a></h2>
					<ul class='info'> 						
						<li><span class='dt'>开发商：</span> <strong class='dd'>{$r[developers]}</strong></li>
						<li><span class='dt'>发行商：</span> <strong class='dd'>{$r[publisher]}</strong></li>
						<li><span class='dt'>发售日期：</span> <strong class='dd'>{$r[releasedate]}</strong></li>
						<li><span class='dt'>游戏容量：</span> <strong class='dd'>{$r[gamecapacity]}</strong></li>
						<li><span class='dt'>游戏类型：</span> <strong class='dd'>s</strong></li>
						<li><span class='dt'>游戏官网：</span> <strong class='dd'>{$r[gameweb]}</strong></li>
					</ul>
					<a class='button' href='{$r[url]}' target='_blank'>高速下载</a>
					
					<div class='grade'>
						<h3>评分等级</h3>
						<div class='num'>{$r[stars]}</div>
						<!--/***  ul>
							<li>浏览量：23234次</li>
							<li>下载量：23534次</li>
						</ul>***/-->
					</div>
				</div>
				{/loop}
				{/pc}
				<div id='pager' class="article-related article-pager ui-pager">{$pages}</div>
			</div>
		</div>

		<div id='side'>
			<div class='ui-box-side'>
				<h2 class='ui-box-side-title'>热门单机游戏下载</h2>
				{pc:content action="hits" catid="280" num="10" order="views DESC" cache="3600"}
				<ol class='ui-list-plus'>
					{loop $data $r}
					<li class='ui-list-plus-item'><span class='num {if $n<4}num-hot{/if}'>{$n}</span><a target='_blank' class='title' href='{$r[url]}' title='{$r[title]}'>{$r[title]}</a></li>
					{/loop}
				</ol>
				{/pc}
			</div>

			<div class='ui-box-side'>
				<h2 class='ui-box-side-title'>最新入库</h2>
				{pc:content action="lists" catid="$catid" num="10" order="inputtime DESC"}
				<ol class='ui-list-plus'>
					{loop $data $r}
					<li class='ui-list-plus-item'><span class='num {if $n<4}num-hot{/if}'>{$n}</span><a target='_blank' class='title' href='{$r[url]}' title='{$r[title]}'>{$r[title]}</a></li>
					{/loop}
				</ol>
				{/pc}
			</div>

			<div class='ui-box-side'>
				<h2 class='ui-box-side-title'>热门推荐</h2>
				{pc:content action="position" posid="538" order="listorder DESC" num="10"}
				<ol class='ui-list-plus'>
					{loop $data $r}
					<li class='ui-list-plus-item'><span class='num {if $n<4}num-hot{/if}'>{$n}</span><a target='_blank' class='title' href='{$r[url]}' title='{$r[title]}'>{$r[title]}</a></li>
					{/loop}
				</ol>
				{/pc}
			</div>

			<div class='ui-box-side'>
				<h2 class='ui-box-side-title'>热门补丁下载</h2>
				{pc:content action="hits" catid="281" num="10" order="views DESC" cache="3600"}
				<ol class='ui-list-plus'>
					{loop $data $r}
					<li class='ui-list-plus-item'><span class='num {if $n<4}num-hot{/if}'>{$n}</span><a target='_blank' class='title' href='{$r[url]}' title='{$r[title]}'>{$r[title]}</a></li>
					{/loop}
				</ol>
				{/pc}
			</div>

			<div class='ui-box-side ui-box-gallery'>
				<h2 class='ui-box-side-title'>热门图集</h2>
				{pc:content action="position" posid="539" order="listorder DESC" num="4"}
				<ul class='ui-img-list ui-img-list-plus'>
					{loop $data $r}
					<li class='ui-img-list-item'>
						<a target='_blank' class='img' href='{$r[url]}'><img src='{thumb($r[thumb],122,91)}' width='122' height='91' /></a>
						<a target='_blank' class='title' href='{$r[url]}' title='{$r[title]}'>{str_cut($r[title], 15,'')}</a>
					</li>
					{/loop}
				</ul>
				{/pc}
			</div>
		</div>
	</div>

	{template 'content', 'hs_footer'}
	<script src='{JS_PATH}seajs/sea-debug.js' id='seajsnode' data-main='hs-game-main'></script>
</body>
</html>