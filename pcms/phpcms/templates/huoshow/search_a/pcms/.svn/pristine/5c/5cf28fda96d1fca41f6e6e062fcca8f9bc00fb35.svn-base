{template "community","myshow_header"}

<div id="wrapper" class='account-settings'>
	<h1 class='title'>账号设置</h1>
	<form id='accont-settings-form' class="accont-settings-form" name="register" autocomplete='off' method='post' action="/index.php?m=community&c=myhuoshow&a=accountsettings&save=yes">
		<div class='form-item'>
			<label class='labels'>邮箱地址</label>
			<input name="mail" type="text" class='input mail' value="{$userinfo[0][email]}" maxlength='15' />
		</div>
		<div class='form-item'>
			<label class='labels'>密码</label>
			<a class='button' target="_blank" href="{DX_URL}home.php?mod=spacecp&ac=profile&op=password">修改密码</a>
			<!-- <input type="password" class='input password fn-hide' name="password" /> -->
		</div>
		<div class='form-item'>
			<label class='labels avatar-labels'>昵称</label>
			<input name="nickname" type="text" class='input nickname' value="{if $userinfo[0][nickname]!=""}{$userinfo[0][nickname]}{else}{$userinfo[0][username]}{/if}" />
		</div>
		<div class='form-item'>
			<label class='labels'>头像</label>
			<input type='hidden' id='avatar-url' name='avatar_url' />
			<a href='javascript:;' class='avatar'><img src='{$avatar}' /></a>
			<span class='button-wrapper'>
				<!--<button type='button' class='button'>上传新头像</button>
				<button type='button' class='button'>从微博获取头像</button>-->
				<iframe frameborder="0" scrolling="no" width="455" height="255" src="/huoshow/FrameWork/upload_dz/myshowupload.php?uid={$uid}"></iframe>
			</span>
			<p class='tips'>头像保存后，你需要刷新一下本页面(按F5键)，才能查看最新的头像效果。</p>
		</div>
		<!--<div class='form-item'>
			<label class='labels'>新浪微博</label>
			<span class='wibo-url'>weibo.com/生活网</span>
			<button type='button' class='button'>重新绑定新浪微博</button>
		</div>
		<div class='form-item'>
			<label class='labels'>豆瓣</label>
			<button type='button' class='button'>绑定豆瓣</button>
		</div>
		<div class='form-item'>
			<label class='labels'>人人网</label>
			<button type='button' class='button'>绑定人人网</button>
		</div>
		<div class='form-item'>
			<label class='labels'>QQ空间</label>
			<button type='button' class='button'>绑定QQ空间</button>
		</div>
		<div class='form-item'>
			<label class='labels'>腾讯微博</label>
			<button type='button' class='button'>绑定腾讯微博</button>
		</div>-->
		<div class='form-item'>
			<label class='labels'>修改签名</label>
			<textarea class='input signature' name='signature'>{$userinfo[0][bio]}</textarea>
		</div>
		<div class='form-item'>
			<label class='labels'>所在城市</label>
			<input name="city" type="text" class='input city' value="{$userinfo[0][residecity]}" />
		</div>
		<div class='form-item'>
			<label class='labels'>个人主页</label>
			<input name="website" type="text" class='input website' value="{$userinfo[0][site]}" />
		</div>
		<div class='form-item submit'><span class='ebtn'><button type='submit' class='sbtn'>保存设置</button><span></div>
	</form>
</div>
</body>
</html>