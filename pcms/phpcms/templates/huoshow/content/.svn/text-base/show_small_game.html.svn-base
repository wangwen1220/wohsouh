			<div class='game_wrapper'>
				{loop $swf $r}	
				<object id="game_swf" type="application/x-shockwave-flash" data="{$r[url]}" width="600" height="400">
					<param name="quality" value="high" />
					<param name="wmode" value="transparent">
					<param name="src" value="{$r[url]}" />
				</object>
				{/loop}
			</div>
