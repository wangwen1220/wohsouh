{template "content","game_header"}
<!-- 游戏操作 -->
<ul class='small_game_nav'>
	{loop subcat(87,0,0,$siteid) $r}
	<li class='a{$n}'><a target="_blank" href='{$r[url]}' title='{$r[catname]}'>{$r[catname]}</a></li>
	{/loop}
</ul>
