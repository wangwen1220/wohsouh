<div id='zoomer'>
	<div id="zoomer-body" class='body'>
		<img id="zoomer-img" src="{$bigimg}" width="{$bigimg_width}" height="{$bigimg_height}" alt="采集图片" />
		<a title="返回" href="/index.php?m=community&c=index&a=show&share_id={$share_id}" id="zoomer-hide"></a>
