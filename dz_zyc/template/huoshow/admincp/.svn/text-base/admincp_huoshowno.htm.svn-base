<div class="itemtitle"><h3>火秀号管理</h3>
<ul class="tab1">
<li class="current"><a href="admin.php?action=huoshowno"><span>火秀号管理</span></a></li>
<li><a href="admin.php?action=huoshowno&op=create"><span>生成火秀号</span></a></li>
</ul></div>
<div>
	<form name="cpform" id="cpform" autocomplete="off" action="admin.php?action=huoshowno" method="POST">
	<table class="tb tb2 ">
		<tr>
			<td><span class="td27">火秀号 ：</span><input type="text" name="id" value="{$id}"/>
			<span class="td27">状态：</span>
				<select name="status">
					<option value="all" <!--{if $status=='all'}-->selected="selected"<!--{/if}-->>所有</option>
					<option value="0" <!--{if $status=='0'}-->selected="selected"<!--{/if}-->>未使用</option>
					<option value="1" <!--{if $status=='1'}-->selected="selected"<!--{/if}-->>已使用</option>
				</select>
				
			<span class="td27">级别：</span>
				<select name="level">
					<option value="all" <!--{if $status=='all'}-->selected="selected"<!--{/if}-->>所有</option>
					<option value="1" <!--{if $level=='1'}-->selected="selected"<!--{/if}-->>1级</option>
					<option value="2" <!--{if $level=='2'}-->selected="selected"<!--{/if}-->>2级</option>
					<option value="3" <!--{if $level=='3'}-->selected="selected"<!--{/if}-->>3级</option>
					<option value="4" <!--{if $level=='4'}-->selected="selected"<!--{/if}-->>4级</option>
					<option value="5" <!--{if $level=='5'}-->selected="selected"<!--{/if}-->>5级</option>
					<option value="6" <!--{if $level=='6'}-->selected="selected"<!--{/if}-->>6级</option>
				</select>
				
			<input class="btn" type="submit" name="submit" value="搜索" /></td>
		</tr>
	</table>
	</form>
</div>
<br />
<div>
<table class="tb tb2 ">
	<tr class="partition">
		<td class="td27">火秀号</td>
		<td class="td27">等级</td>
		<td class="td27">是否使用</td>
		<td class="td27">生成时间</td>
		<td class="td27">被使用时间</td>
	</tr>
	<!--{loop $list $value}-->
	<tr>
		<td>{$value['id']}</td>
		<td>{$value['level']}</td>
		<td><!--{if $value['status']==1}-->已使用<!--{else}-->未使用<!--{/if}--></td>
		<td>{$value['dateline_str']}</td>
		<td>{$value['usedateline_str']}</td>
	</tr>
	<!--{/loop}-->
	<tr><td colspan="8"><div class="cuspages right"><div class="pg">$multi</div></div></td></tr>
</table>
</div>
