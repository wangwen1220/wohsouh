<script>

(function($){
	window.fnzhankai = function(v){
		if(v==1){$("#memberinfo").css("display","inline");$("#zhankai").html('<a href="javascript:void(0);" onclick="fnzhankai(0);"><<收起</a>');}
		else if(v==0){$("#memberinfo").css("display","none");$("#zhankai").html('<a href="javascript:void(0);" onclick="fnzhankai(1);">>>展开</a>');}
	}	
})(jQuery);
</script>
