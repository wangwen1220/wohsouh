<script  type="text/javascript">  
(function($){
	window.deleteBankAcount = function(href)
	{
		if (!confirm("确认删除？"))
		{
		    return false;
		}
		$.get(href,function(data){
			if(data=='1'){
				alert('删除成功');
				var url2 = 'home.php?mod=space&do=withdraw&act=banklist&timt='+getNowTime();
				$.get(url2,function(rs){
					$(".banklist").html(rs);
					
				})
			}else{
				alert('删除失败');
			}
		})
		return false;
	}
	window.duixian = function(){
		
		var withdraw = $("#withdraw").val();
		var account  = $('input[name="id"]:[checked]').val();
		if(withdraw==undefined || withdraw==0){
			alert('请选择兑换金额');
			$("#withdraw").focus();
			return false;
		}
		var daycash = "$daycash['count']"
		if (daycash >= '3'){
			alert('您今天以超过三次兑换');
			return false;
		}
		if(account==undefined || account==0){
			alert('请选择银行帐号，如果你还没有银行帐号请添加一个');
			return false;
		}
		var leaveCoin = "{$userHuoShowCoin}";
		if(leaveCoin==""){
			alert('您的余额不足以兑换');
			return false;
		}
		if(withdraw>{$userHuoShowCoin}){
			alert('您的余额不足以兑换');
			return false;
		}
		if (!confirm("确认兑现？"))
		{
		    return false;
		}

		var url = '/home.php?mod=space&do=withdraw&act=duixian';
		$.post(url,{'withdraw':withdraw,'account':account},function(data){
			if(data=='1'){
				alert('提交成功，我们将在3个工作日内将现金打入您的卡号内');

				window.location.href='/home.php?mod=space&do=withdraw&act=record';
				return;
			}
			if(data=='-1'){
				alert('您的余额不足以兑换');
				window.location.reload();
				return;
			}else{
				//alert(data);
				alert('失败，系统错误');
				window.location.reload();
				return;
			}
			
		});
	}
	
	window.getNowTime =  function(){
		var now= new Date();   
		var year=now.getYear();   
		var month=now.getMonth()+1;   
		var day=now.getDate();   
		var hour=now.getHours();   
		var minute=now.getMinutes();   
		var second=now.getSeconds();   
		var nowdate=year+""+month+""+day+""+hour+""+minute+""+second;   
		return nowdate;
	}
})(jQuery);
</script>