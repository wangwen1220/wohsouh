<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset={$CONFIG[charset]}" />
<meta http-equiv="Content-Language" content="zh-CN" />
<title>{$name}_{$SYSTEM[sitename]}</title>
<meta http-equiv="X-UA-Compatible" content="IE=EmulateIE7" />
<meta http-equiv="expires" content="0" />
<meta name="keywords" content="{$meta_keywords}" />
<meta name="description" content="{$meta_description}" />
<meta name="author" content="{$SYSTEM[sitename]}" />
<meta name="Copyright" content="{$SYSTEM[sitename]}版权所有" />
<link href="{IMG_URL}css/style.css" rel="stylesheet" type="text/css" />
<script type="text/javascript" src="{IMG_URL}js/config.js"></script>
<script type="text/javascript" src="{IMG_URL}js/lib/jquery.js"></script>
<script type="text/javascript" src="{IMG_URL}js/lib/jquery.cookie.js"></script>
<script type="text/javascript">
var catid = {$catid};
var modelid = {$modelid};
</script>
</head>
<body>

<!--{template 'system/header.html'}-->

<div class="mar_t_5 main">
  <div id="position" class=" f_l">
	  <a href="{WWW_URL}">首页</a>
	  <!--{loop $pos $cat}-->
	  <a href="{$cat[url]}">{$cat[name]}</a>
	  <!--{/loop}-->
	  {model(3)->name}
  </div>
  <div class="clear"></div>
</div>

<div class="clear bk_5"></div>
<div class="main mar_t_5">
  <div class="f_l box_1 gab_a16">
    <div id="title">
      <h2>{$name} <a href="{APP_URL}?app=rss&controller=index&action=feed&catid={$catid}" target="_blank"><img src="{IMG_URL}images/rss.gif" alt="订阅该栏目" title="订阅该栏目" height="16" width="16"/></a></h2>
      <div class="tab_3">
        <a href="1.shtml">全部</a>
        <!--{loop $model $alias $name}-->
        <a href="{$alias}1.shtml" {if $alias == 'link'}class="s_3"{/if}>{$name}</a>
        <!--{/loop}-->
      </div>
    </div>
    
    <div class="pad_10 f_14">
      <!--文章列表-->
      <ul class="txt_list">
        <!--{db sql="select * from #table_content where catid=$catid AND modelid=3 AND status=6 order by published desc" size="$pagesize" page="$page"}-->
          {if $k>0 && $k%5==0}<li class="bk_10"></li>{/if}
          <li><a href="{$r[url]}" target="_blank">{$r[title]}</a><span class="date">{date('n月j日 H:i', $r['published'])}</span></li>
        <!--{/db}-->
      </ul>
      <!--分页-->
      <div class="page mar_t_8">
        <ul class="inline">
          <!--{pages($total, $page, $pagesize, 2, $urlrule)}-->
        </ul>
        <div class="clear"></div>
      </div>
    </div>
  </div>
  <div class="gab_b8 f_r">
    <!--{template 'system/right.html'}-->
  </div>
  <div class="clear"></div>
</div>

<!--{template 'system/footer.html'}-->