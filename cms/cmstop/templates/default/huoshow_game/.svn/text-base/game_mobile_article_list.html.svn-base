				<div class="Web_games_left_list_03">
					<div class="Web_games_left_tuwen_03">
						<div class="Web_games_left_tu_03"> 
							{if $r[thumb] == ''}
								<img src="{WWW_URL}img/templates/huoshow02/images/nopic.jpg" width="128" height="80" />
